            </dt>
            <dd class = "col-sm-10">
                @if(Model.MobileNr != null) 
                {
                    @Html.DisplayFor(model => model.MobileNr)
                }
            </dd>
            <dt class = "col-sm-2">
                @if (Model.TelephoneNr != null)
                {
                    @Html.DisplayNameFor(model => model.TelephoneNr)
                }
            </dt>
            <dd class = "col-sm-10">
                @if (Model.TelephoneNr != null)
                {
                    @Html.DisplayFor(model => model.TelephoneNr)
                }
            </dd>
            <dt class = "col-sm-2">
                @if (Model.Email != null)
                {
                    @Html.DisplayNameFor(model => model.Email)
