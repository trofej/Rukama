@model Rukama.Models.Object

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var photoPath1 = "~/Images/Objects/" + (Model.ImagePath1 ?? "noimage.jpg");
    var photoPath2 = "~/Images/Objects/" + (Model.ImagePath2 ?? "noimage.jpg");
    var photoPath3 = "~/Images/Objects/" + (Model.ImagePath3 ?? "noimage.jpg");

}

<div class="object-details-page">
