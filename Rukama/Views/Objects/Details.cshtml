            </dt>
            <dd class = "col-sm-10">
                @if (Model.Email != null)
                {
                    @Html.DisplayFor(model => model.Email)
                }
            </dd>
            <dt class = "col-sm-2">
                @if (Model.URL != null)
                {
                    @Html.DisplayNameFor(model => model.URL)
                }
            </dt>
            <dd class = "col-sm-10">
                @if (Model.URL != null)
                {
                    @Html.DisplayFor(model => model.URL)
                }
            </dd>
            <dt class = "col-sm-2">
