                        <div class="row">
                        <div class="col-md-4">
                            <div class="form-group" text>
                                <b> @Html.DisplayNameFor(model => model.ImagePath1) </b>
                                <div class="form-group">
                                <img id="image-container" src="@photoPath1" alt="1. Image" asp-append-version="true"/>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <b> @Html.DisplayNameFor(model => model.ImagePath2) </b>
