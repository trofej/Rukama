        <div>
            <a asp-action="Edit" asp-route-id="@Model?.ObjectID" class="btn-primary btn-sm" id="editTextButton" type="button" title="Edit subject"><i class="fa fa-edit"></i>   Edit</a>
            <a href="/Map/Subjects" class="btn-primary btn-sm" id="mapTextButton" type="button" title="Redirects to the map"><i class="fa fa-map"></i>   Map</a>
            <a asp-action="Index" class="btn-primary btn-sm" id="tableTextButton" type="button" title="Redirects to the table"><i class="fa fa-table"></i>   Table</a>
        </div>
    </fieldset>
