            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.ObjectType)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.ObjectType)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Specialization)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Specialization)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Street)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Street)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.StreetNr)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.StreetNr)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.City)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.City)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Country)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Country)
            </dd>
            <dt class = "col-sm-2">
                @if(Model.MobileNr != null) 
                {
                    @Html.DisplayNameFor(model => model.MobileNr)
