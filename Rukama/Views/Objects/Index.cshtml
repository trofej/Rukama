@model IEnumerable<Rukama.Models.Object>

@{
    ViewData["Title"] = "Index";
	Layout = "~/Views/Table/_TableLayout.cshtml";
}



<p>
    <a asp-action="Create" type="button" ><i class="fa fa-plus-circle"></i> Create new object</a>
</p>


<div class="object-index-page">
    <div class="table">
        <table id="myTable" class="display">
            <thead>
                <tr>
                    <th>
                        Icon
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ObjectName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ObjectType)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Specialization)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Street)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.City)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Country)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CreationDate)
                    </th>
                    <th>
                        Actions
                    </th>

                </tr>
            </thead>

            <tbody>
                @{
                    if (Model != null)
                    {
                        @foreach (var item in Model)
                        {   
                            var iconPath = $"~/Images/Icons/{item.Specialization}2.png";
                            <tr>
                                <td>
                                    <img src="@iconPath" asp-append-version="true"/>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ObjectName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ObjectType)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Specialization)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Street)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.City)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Country)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CreationDate)
                                </td>
               
                                <td>  
                                        <div class="button-container">
                                              <a asp-action="Details" asp-route-id="@item.ObjectID" class="btn-info btn-sm" id="detailsButton" type="button" title="Show details"><i class="fa fa-bars"></i></a>
                                                @if (ViewBag.userID == item.UserID)
                                                {
                                                    <a asp-action="Edit" asp-route-id="@item.ObjectID" class="btn-primary btn-sm" id="editButton" type="button" title="Edit subject"><i class="fa fa-edit"></i></a>
                                                    <a asp-action="Delete" asp-route-id="@item.ObjectID" class="btn-danger btn-sm" id="deleteButton" type="button" title="Delete subject"><i class="fa fa-trash"></i></a>
                                                }
                                    </div>

                                </td>
                            </tr>
                        }
                    }
                }
            </tbody>
        </table>
    </div>
</div>