@model Rukama.Models.Subject

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var photoPath1 = "~/Images/Subjects/" + (Model.ImagePath1 ?? "noimage.jpg");
    var photoPath2 = "~/Images/Subjects/" + (Model.ImagePath2 ?? "noimage.jpg");
    var photoPath3 = "~/Images/Subjects/" + (Model.ImagePath3 ?? "noimage.jpg");
}


<div class="subject-page">
    <fieldset class="delete-page-container">
        <div class="delete-page-title">Are you sure you want to delete the subject: @Model.SubjectName ?</div>

        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.SubjectName)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.SubjectName)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.LegalForm)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.LegalForm)
            </dd>
            @if(Model.CID != null) 
            {
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.CID)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.CID)
                </dd>
            }
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Specialization)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Specialization)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Street)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Street)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.StreetNr)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.StreetNr)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.City)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.City)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Country)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Country)
            </dd>
            @if (Model.MobileNr != null)
            {
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.MobileNr)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.MobileNr)
                </dd>
            }
            @if (Model.TelephoneNr != null)
            {
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.TelephoneNr)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.TelephoneNr)
                </dd>
            }
             @if (Model.Email != null)
            {
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Email)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Email)
                </dd>
            }
            @if (Model.URL != null)
            {
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.URL)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.URL)
                </dd>
            }
            @if (Model.Comment != null)
            {
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.Comment)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.Comment)
                </dd>
            }
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.CreationDate)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.CreationDate)
            </dd>
            @if (Model.ModifiedDate != null)
            {
                <dt class = "col-sm-2">
                    @Html.DisplayNameFor(model => model.ModifiedDate)
                </dt>
                <dd class = "col-sm-10">
                    @Html.DisplayFor(model => model.ModifiedDate)
                </dd>
            }

            
                          <div class="row" style="margin-top: 10px;">
                            <div class="col-md-4">
                                <div class="form-group" text>
                                    <b> @Html.DisplayNameFor(model => model.ImagePath1) </b>
                                    <div class="form-group">
                                    <img id="image-container" src="@photoPath1" alt="1. Image" asp-append-version="true"/>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <b> @Html.DisplayNameFor(model => model.ImagePath2) </b>
                                    <div class="form-group">
                                    <img id="image-container" src="@photoPath2" alt="2. Image" asp-append-version="true"/>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <b> @Html.DisplayNameFor(model => model.ImagePath3) </b>
                                    <div class="form-group">
                                    <img id="image-container" src="@photoPath3" alt="3. Image" asp-append-version="true"/>
                                    </div>
                                </div>
                            </div>
                        </div>

            <form asp-action="Delete">
            <input type="hidden" asp-for="SubjectID" />
            <button type="submit" class="btn-danger btn-sm" id="deleteTextButton" title="Click to permanently delete the subject"><i class="fa fa-trash"></i>   Delete</button>
                <a asp-action="Index" class="btn-primary btn-sm" id="tableTextButton" type="button" title="Redirects to the table"><i class="fa fa-undo"></i>   Back to list</a>
            </form>
        </dl>
    </fieldset>
</div>
