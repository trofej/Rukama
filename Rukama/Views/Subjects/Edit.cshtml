                </div>
                <div class="form-group">
                    <label asp-for="StreetNr" class="control-label"></label>
                    <input asp-for="StreetNr" class="form-control" placeholder="StreetNr"/>
                    <span asp-validation-for="StreetNr" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="City" class="control-label"></label>
                    <input asp-for="City" class="form-control" placeholder="City"/>
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Country" class="control-label"></label>
                    <input asp-for="Country" class="form-control" placeholder="Country"/>
                    <span asp-validation-for="Country" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Region" class="control-label"></label>
                    <input asp-for="Region" class="form-control" placeholder="Region"/>
