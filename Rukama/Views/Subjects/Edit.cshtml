                    <input asp-for="URL" class="form-control" placeholder="URL"/>
                    <span asp-validation-for="URL" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Comment" class="control-label"></label>
                    <input asp-for="Comment" class="form-control" placeholder="Comment"/>
                    <span asp-validation-for="Comment" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="OpeningHours" class="control-label"></label>
                    <input asp-for="OpeningHours" class="form-control" placeholder="OpeningHours"/>
                    <span asp-validation-for="OpeningHours" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Icon" class="control-label"></label>
                    <input asp-for="Icon" class="form-control" placeholder="Icon"/>
                    <span asp-validation-for="Icon" class="text-danger"></span>
                </div>
                <div class="form-group">
                        <label asp-for="Image1" class="control-label"></label>
                        <div class="col-sm-12">
                            <input asp-for="Image1" class="form-control custom-file-input"/>
