                </div>
                <div class="form-group">
                    <label asp-for="MobileNr" class="control-label"></label>
                    <input asp-for="MobileNr" class="form-control" placeholder="MobileNr"/>
                    <span asp-validation-for="MobileNr" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TelephoneNr" class="control-label"></label>
                    <input asp-for="TelephoneNr" class="form-control" placeholder="TelephoneNr"/>
                    <span asp-validation-for="TelephoneNr" class="text-danger"></span>
